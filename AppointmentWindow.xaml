<Window x:Class="FootballManager.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManager"
        mc:Ignorable="d"
        Title="AppointmentWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="GreenYellow">
        <DataGrid x:Name="gridAppointments" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,254" SelectionChanged="gridAppointments_SelectionChanged"/>
        <DataGrid x:Name="gridPlayers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,238,0,0"/>
    </Grid>
</Window>
